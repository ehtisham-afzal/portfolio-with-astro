---
import Layout from "../layouts/Layout.astro";
import { AppLogos } from "../components/Data.js";
import { Image } from "astro:assets";
import Tooltip from "../components/Tooltip.astro";
import MainPageNavBar from "../components/MainPageNavBar.astro";
import Card from "../components/Card.astro";
---

<Layout title="Ehtisham's Portfolio.">
  <main class="w-full mt-28 ">
    <div class="w-full gap-5 flex">
      <Image
        width={80}
        height={80}
        alt="Ehtisham Afzal"
        src="/sham2.jpg"
        class="object-contain object-center border-2 p-0.5 rounded-full "
      />
      <div class="w-fit grid grid-flow-row grid-rows-2">
        <h1 class="text-3xl md:text-4xl tracking-wide font-bold">
          Ehtisham Afzal.
        </h1>
        <h2 class="text-neutral-500 text-xl font-semibold leading-7">
          Web Developer
        </h2>
      </div>
    </div>
    <p class="text-lg font-medium mt-6 w-full">
      I'm a front-end developer, based in Pakistan. specializing in full-stack
      web applications using JavaScript, TypeScript, React, Next.js, and
      Node.js. I love building Web-Applications that are user-friendly, simple and
      delightful. âœ¨
    </p>
    <MainPageNavBar />
    <h2 class="text-3xl font-semibold leading-9 my-10">Projects</h2>
    <div class="grid sm:grid-flow-col sm:grid-cols-2 gap-2 w-full sm:h-45">
      <a class="w-full h-60 sm:h-44" href="/projects/LittleLemon">
        <Image
          width={1}
          height={1}
          alt="Little-Lemon-ScreenShot"
          class="w-full h-52 sm:h-40 border rounded-lg object-cover object-top"
          src="/LettleLemonHero700px.jpg"
        />
        <h2 class="text-lg mt-1">LittleLemon</h2>
      </a>
      <a class="w-full h-60 sm:h-44" href="#/">
        <Image
          width={1}
          height={1}
          alt="Under construction"
          class="w-full h-52 sm:h-40 border rounded-lg object-cover object-top"
          src="/page-under-construction.png"
        />
        <h2 class="text-lg mt-1">Under-construction</h2>
      </a>
    </div>

    <h2 class="my-12 text-3xl font-semibold leading-9 tracking-tight">
      TechStack
    </h2>
    <div
      class="self-center grid flex-wrap w-full grid-flow-dense grid-cols-4 sm:grid-cols-5 gap-2 justify-stretch h-fit mb-10"
    >
      {
        AppLogos.map((logo) => (
          <Tooltip text={logo.Name}>
            <Image
              width={1}
              height={1}
              alt={`${logo.Name} Logo`}
              class="border w-full h-full p-4 object-cover rounded-lg backdrop-filter bg-black/50 hover:bg-gray-500 "
              src={logo.Logo}
            />
          </Tooltip>
        ))
      }
    </div>
  </main>
</Layout>
